<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <%- include('../partial/head', { title: 'Categories | Zesty' }) %>
</head>

<body>
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <%- include('../partial/toasts') %>
    </div>

    <div class="sidebar p-3" id="sidebar">
        <%- include('../partial/sidebar', {active: 'categories' }); %>
    </div>

    <div class="main-content">
        <header class="d-flex align-items-center justify-content-between p-4 border-bottom">
            <%- include('../partial/header') %>
        </header>

        <div class="container-fluid p-4">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex flex-wrap gap-3 align-items-center">
                        <h5 class="fw-bold mb-0">Food Categories</h5>
                        <div class="ms-auto d-flex gap-2">
                            <span class="badge badge-pill bg-secondary">
                                <%= categories.length %> Categories
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <% if (categories.length > 0) { %>
                <div class="row g-4" id="categories-grid">
                    <% categories.forEach(category => { %>
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="food-card position-relative h-100">
                                <a href="/categories/<%= category.name %>">
                                    <img src="https://placehold.co/60x60/<%= Math.floor(Math.random()*16777215).toString(16).padStart(6,'0') %>/white?text=<%= (t=category.name.split(' '), t.length>1? t[0][0]+t[t.length-1][0] : t[0][0]) %>" 
                                         class="card-img-top" alt="<%= category.name %>">
                                </a>
                                <div class="card-body">
                                    <h6 class="card-title fw-bold">
                                        <%= category.name %>
                                    </h6>
                                    <% if (category.description) { %>
                                        <p class="text-muted small mb-3">
                                            <%= category.description %>
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>



            <% } else { %>
                <div id="no-categories" class="text-center py-5">
                    <i class="fas fa-list fs-1 text-muted mb-3"></i>
                    <h4 class="text-muted">No categories available</h4>
                    <p class="text-muted">Categories will appear here once they are added.</p>
                    <a href="/home" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partial/scripts') %>

</body>

</html>