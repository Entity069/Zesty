<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <%- include('../partial/head', {title: 'Admin Dashboard | Zesty' }); %>
</head>

<body>
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <%- include('../partial/toasts'); %>
    </div>

    <div class="sidebar p-3" id="sidebar">
        <%- include('../partial/admin_sidebar', {active: 'dashboard'}); %>
    </div>

    <div class="main-content">
        <header class="d-flex align-items-center justify-content-between p-4 border-bottom">
            <%- include('../partial/diff-header', {title: 'Dashboard' }); %>
        </header>

        <div class="container-fluid p-4">

            <div class="row g-4 mb-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-primary bg-opacity-10 text-primary me-3">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Total Revenue</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="total-revenue">₹<%= revenue.revenue %></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-success bg-opacity-10 text-success me-3">
                                <i class="fas fa-shopping-bag"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Total Orders</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="total-orders"><%= orders.orders %></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-info bg-opacity-10 text-info me-3">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Total Users</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="total-users"><%= userCount.userCount %></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-warning bg-opacity-10 text-warning me-3">
                                <i class="fas fa-store"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Active Sellers</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="active-sellers"><%= sellers.sellers %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-secondary bg-opacity-10 text-secondary me-3">
                                <i class="fas fa-utensils"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Total Items</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="total-items"><%= items.items %></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-danger bg-opacity-10 text-danger me-3">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Categories</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="total-categories"><%= categories.categories %></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-success bg-opacity-10 text-success me-3">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Pending Orders</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="pending-orders"><%= pOrder.pOrder %></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="stats-card">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon bg-info bg-opacity-10 text-info me-3">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Total Reviews</h6>
                                <h4 class="fw-bold mb-0 intcomma" id="today-sales"><%= ratings.ratings %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 justify-content-center">
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="card h-100 text-center">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <div class="mb-4">
                                <i class="fas fa-users text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">View All Users</h5>
                            <p class="card-text text-muted mb-4">Manage registered users</p>
                            <div class="mt-auto">
                                <a href="/admin/all-users" class="btn btn-primary w-100">
                                    <i class="fas fa-eye me-2"></i>
                                    View Users
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="card h-100 text-center">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <div class="mb-4">
                                <i class="fas fa-shopping-bag text-success" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">View All Orders</h5>
                            <p class="card-text text-muted mb-4">Monitor platform orders</p>
                            <div class="mt-auto">
                                <a href="/admin/all-orders" class="btn btn-success w-100">
                                    <i class="fas fa-eye me-2"></i>
                                    View Orders
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="card h-100 text-center">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <div class="mb-4">
                                <i class="fas fa-tags text-danger" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="card-title fw-bold mb-3">View All Categories</h5>
                            <p class="card-text text-muted mb-4">Manage food categories</p>
                            <div class="mt-auto">
                                <a href="/admin/all-categories" class="btn btn-danger w-100">
                                    <i class="fas fa-eye me-2"></i>
                                    View Categories
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partial/scripts'); %>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.intcomma').forEach(el => {
            el.textContent.includes('₹') && (el.textContent = `₹${intcomma(el.textContent.replace('₹','').trim())}`);
        });
    });
</script>
</body>
</html>